generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  active      Boolean
  createdAt   DateTime @default(now())
  imagem      String
  deletedAt   DateTime

  @@map("produtos")
}

model Seller {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  celNumber Int
  createdAt DateTime @default(now())
  active    Boolean
  deletedAt DateTime

  @@map("sellers")
}
