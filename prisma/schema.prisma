// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  active      Boolean
  createdAt   String
  image       String
  price       Float
  deletedAt   String?

  @@map("products")
}

model Seller {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  celPhone  Int
  createdAt String
  active    Boolean
  whatsLink String
  deletedAt String?

  @@map("sellers")
}
